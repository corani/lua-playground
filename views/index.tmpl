<html>
<head>
    <title>Lua Playground</title>
    <link rel='stylesheet' href='//cdn.jsdelivr.net/foundation/6.2.0/foundation.min.css'>
    <link rel="stylesheet" href="//cdnjs.cloudflare.com/ajax/libs/highlight.js/11.7.0/styles/base16/gruvbox-dark-hard.min.css" crossorigin="anonymous" referrerpolicy="no-referrer" />
    <link rel='stylesheet' href='/css/highlight.css'>
    <script src='//code.jquery.com/jquery-2.2.4.min.js'></script>
    <script src='//use.fontawesome.com/b2c0f76220.js'></script>
    <script src='//cdnjs.cloudflare.com/ajax/libs/highlight.js/11.7.0/highlight.min.js'></script>
    <script src='/js/highlight.js'></script>
    <link href="favicon.ico" rel="icon" media="(prefers-color-scheme: light)" />
    <link href="favicon-dark.ico"  rel="icon" media="(prefers-color-scheme: dark)" />
</head>
<body>
    <form method="POST">
        <!-- Syntax highlighting from: https://www.codehim.com/text-input/textarea-with-syntax-highlighting/ /-->
        <div class="editor-holder">
        	<ul class="toolbar">
        		<li><a href="#" id="indent" title="Toggle tabs or spaces"><i class="fa fa-indent"></i></a></li>
        		<li><a href="#" id="fullscreen" title="Toggle fullscreen mode"><i class="fa fa-expand"></i></a></li>
                <li><button type="submit">Submit</button></li>
        	</ul>
        	<div class="scroller">
        		<textarea class="editor allow-tabs" name="data">{{ .input }}</textarea>
        		<pre><code class="syntax-highight lua"></code></pre>
        	</div>
        </div>
    </form>
    <hr />
    <div class="output-holder">
        <ul class="toolbar">
            <li><i class="fa fa-terminal"></i></li>
        </ul>
        <div class="scroller">
            <pre><code>{{ .output }}</code></pre>
        </div>
    </div>
</body>
</html>
